{
  "name": "yvent-api",
  "version": "0.1.0",
  "scripts": {
    "dev": "docker-compose up",
    "dev:next": "nodemon",
    "build": "tsc",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/server.js",
    "type-check": "tsc --noEmit",
    "prisma:docker": "docker-compose run next npx prisma",
    "prisma:docker:preview": "docker-compose run next npx prisma --preview-feature",
    "prisma:dev-mode": "prisma generate --watch",
    "prisma:create:migration": "prisma migrate dev",
    "prisma:generate:client": "prisma generate",
    "prisma:push:migrations": "prisma migrate deploy",
    "generate": "prisma generate",
    "codegen:graphql": "graphql-codegen",
    "prepare": "npm run generate && husky install",
    "check-latest": "npx npm-check-updates -u"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.4.17",
    "@giraphql/core": "^2.17.0",
    "@giraphql/plugin-scope-auth": "^2.12.0",
    "@giraphql/plugin-simple-objects": "^2.10.0",
    "@giraphql/plugin-validation": "^2.13.0",
    "@prisma/client": "^3.4.2",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "apollo-server-micro": "^3.5.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.25.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "graphql": "^15.7.0",
    "graphql-upload": "^12.0.0",
    "jsonwebtoken": "^8.5.1",
    "micro": "^9.3.4",
    "mjml": "^4.10.4",
    "nodemailer": "^6.7.0",
    "passport": "^0.5.0",
    "passport-facebook": "^3.0.0",
    "stripe": "^8.186.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql-upload": "^8.0.7",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/micro": "^7.3.6",
    "@types/mjml": "^4.7.0",
    "@types/node": "^16.11.6",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "autoprefixer": "^10.3.7",
    "husky": "^7.0.4",
    "nodemon": "^2.0.14",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "prisma": "^3.3.0",
    "typescript": "4.4.4"
  }
}
