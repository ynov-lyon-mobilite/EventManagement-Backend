{
  "name": "yvent-api",
  "version": "0.1.0",
  "scripts": {
    "dev": "mkdir -p dist && docker-compose up",
    "dev:api": "nodemon  ./dist/server.js",
    "dev:concurent": "concurrently -k -n 'COMPILER,API,PRISMA' 'npm run compile' 'npm run dev:api' 'yarn prisma:dev-mode'",
    "start": "prisma migrate deploy &&  node  ./dist/server.js",
    "build": "tsc --noEmit && mkdir -p dist && npx swc src --out-dir dist",
    "dev:next": "nodemon",
    "type-check": "tsc --noEmit",
    "prisma:docker": "docker-compose run server npx prisma",
    "prisma:docker:preview": "docker-compose run server npx prisma --preview-feature",
    "prisma:dev-mode": "prisma generate --watch",
    "prisma:create:migration": "prisma migrate dev",
    "prisma:generate:client": "prisma generate",
    "prisma:push:migrations": "prisma migrate deploy",
    "generate": "prisma generate",
    "codegen:graphql": "graphql-codegen",
    "prepare": "npm run generate && husky install",
    "check-latest": "npx npm-check-updates -u",
    "compile": "npx swc src --out-dir dist -w --sync"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@giraphql/core": "^2.19.0",
    "@giraphql/plugin-scope-auth": "^2.13.1",
    "@giraphql/plugin-simple-objects": "^2.12.0",
    "@giraphql/plugin-validation": "^2.15.0",
    "@prisma/client": "^3.5.0",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "apollo-server-micro": "^3.5.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.26.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "firebase-admin": "^10.0.2",
    "graphql": "^15.7.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^12.0.0",
    "jsonwebtoken": "^8.5.1",
    "micro": "^9.3.4",
    "mjml": "^4.10.4",
    "nodemailer": "^6.7.1",
    "passport": "^0.5.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "stripe": "^8.209.0",
    "subscriptions-transport-ws": "^0.11.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.52",
    "@swc/core": "^1.2.118",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql-upload": "^8.0.7",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/micro": "^7.3.6",
    "@types/mjml": "^4.7.0",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth": "^1.0.42",
    "autoprefixer": "^10.3.7",
    "concurrently": "^6.4.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "prisma": "^3.5.0",
    "typescript": "4.5.2"
  },
  "engines": {
    "node": "16.x"
  }
}
